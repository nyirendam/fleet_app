
<% form_for(@triplog) do |f| %> 

<%= f.error_messages %> 
<p>
<%= f.label "Trip Date     " %>
<%= f.text_field :tripDate %> 
</p>
<p> 
<%= f.label "Car Registration" %> 
<% cars_array = Car.all.map { |car| [car.regNum, car.id] } %>
<%= f.select(:car_id,options_for_select(cars_array)) %>
</p> 
<p> 
<%= f.label "Driver Name" %>
<%# creates an array of full name and driver id from driver database table %>

<% drivers_array = Driver.all.map { |driver| [driver.fname+' '+driver.lname, driver.id] } %>

<%# creates a combo box with option name and option value %>

<%= f.select(:driver_id,options_for_select(drivers_array)) %>
</p> 

<p> 
<%= f.label "Location From" %> <%= f.text_field :locationFrom, :size =>25 %> 
<%= f.label "To" %> <%= f.text_field :locationTo, :size =>25 %> 
</p> 
<p> 
<%= f.label "Departure Time" %> <%= f.text_field :departureTime, :size =>20 %> 
<%= f.label "Arrival Time" %> <%= f.text_field :arrivalTime, :size =>20 %>
<p> 
<p> 
<%= f.label "Mileage From" %> <%= f.text_field :mileageFrom, :size =>20 %> 
<%= f.label "To" %> <%= f.text_field :mileageTo, :size =>20 %>
<p> 

<%= f.submit "Save" %> 
</p> 
<% end %> 
