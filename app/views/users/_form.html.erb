<% form_for(@user) do |f| %> 
<%= f.error_messages %> 
<p>
<%= f.label "First Name" %> <%= f.text_field :fname %> 
</p>
<p> 
<%= f.label "Last Name" %> <%= f.text_field :lname %> 
</p>
<p> 
<%= f.label "User Name" %> <%= f.text_field :username %>  
</p> 
<p> 
<%= f.label "Password" %> <%= f.password_field :password %> 
</p> 
<p> 
<%= f.label "Confirm" %> <%= f.password_field :password_confirmation %> 
<p> 
<%= f.submit "Save" %> 
</p> 
<% end %> 
